{
  "schemaVersion": 1,
  "id": "wakatime-mod",
  "version": "${version}",
  "name": "Wakatime Mod",
  "description": "Connects your playtime to wakatime!",
  "authors": [
    "Neon"
  ],
  "contact": {
    "homepage": "https://saahild.com/",
    "sources": "https://github.com/NeonGamerBot-QK/wakatime-mod"
  },
  "license": "WTFPL",
  "icon": "assets/wakatime-mod/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.saahild.WakatimeMod"
    ],
    "client": [
      "com.saahild.WakatimeModClient"
    ]
  },
  "mixins": [
    "wakatime-mod.mixins.json",
    {
      "config": "wakatime-mod.client.mixins.json",
